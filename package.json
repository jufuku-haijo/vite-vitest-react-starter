{
  "name": "vite-based-react-starter",
  "private": true,
  "version": "0.3.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest",
    "lint": "eslint ./src --ext .js,jsx,ts,tsx",
    "lint:fix": "pnpm lint -- --fix",
    "preview": "vite preview",
